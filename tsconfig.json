{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": false,
        "sourceMap": false,
        "lib": ["ES2020", "DOM"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "scripts/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
